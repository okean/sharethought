<header>
  <nav class="round">
    <ul class="nav">
      <li><%= link_to 'Home', root_path, class: "nav" %></li>
      <% if signed_in? %>
        <li><%= link_to 'Users', users_path %></li>
        <li><%= link_to 'Profile', current_user %></li>
        <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
      <% end %>
      <li><%= link_to 'Help', help_path, class: "nav" %></li>
      <% if signed_in? %>
        <li><%= link_to 'Sign out', signout_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Sign in', signin_path %></li>
      <% end %>
    </ul>
  </nav>
  <%= link_to 'Sharethought', root_path, id: "logo", class: "round" %>
</header>