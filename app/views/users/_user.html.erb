<li>
  <%= gravatar_for user, size: 30 %>
  <%= link_to user.name, user_path(user) %>
  <% if current_user.admin? and !user.admin %>
    | <%= link_to "delete", user, method: :delete, :confirm => "You sure?",
                                  :title => "Delete #{user.name}" %>
  <% end %>
</li>